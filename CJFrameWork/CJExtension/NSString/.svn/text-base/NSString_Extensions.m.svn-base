#pragma mark 计算字符串宽高
-(CGSize)sizeWithContext:(UIFont *)ft size:(CGSize)size
{
    NSMutableParagraphStyle *paragraphStyle = [[NSMutableParagraphStyle alloc]init];
    paragraphStyle.lineBreakMode = NSLineBreakByCharWrapping;
    NSDictionary *attributes = @{NSFontAttributeName:ft, NSParagraphStyleAttributeName:paragraphStyle.copy};
    CGSize bsize = [self boundingRectWithSize:size options:NSStringDrawingUsesLineFragmentOrigin | NSStringDrawingUsesFontLeading  attributes:attributes context:nil].size;
    return bsize;

